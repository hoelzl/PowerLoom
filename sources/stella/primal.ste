(defun (split-string (CONS OF STRING-WRAPPER)) ((input STRING) (separator CHARACTER))
  :documentation "Split `input' into separate strings based on the `separator' character."
  :public? TRUE
  (let ((length (length input))
        (start 0)
        (end 0)
        (strings NIL))
    (loop
      (setq end (position input separator start))
      (pushq strings (subsequence input start end))
      (if (and (defined? end)
               (< end (1- length)))
          (setq start (1+ end))
        (break)))
    (return (reverse strings))))

