(defmethod (min INTEGER) ((x INTEGER) (y INTEGER))
  :documentation
  "Return the minimum of `x' and `y'.  If either is NULL, return the other."
  :public? TRUE
  ;; slightly tricky, if > condition is true, x can't be NULL:
  (return (choose (> x y) 
                  (choose (null? y) x y)
                  (choose (null? x) y x))))

