                    (choose (< value 0)
                            (concatenate "-" (format-with-padding (integer-to-string (- value))
                                                                  (1- size) #\0 :RIGHT FALSE))
                             (format-with-padding (integer-to-string value)
                                                  size #\0 :RIGHT FALSE)))))

