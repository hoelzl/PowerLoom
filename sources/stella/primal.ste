(defconstant LONG-INTEGER-BIT-WIDTH INTEGER
             (round (/ (log (* MOST-POSITIVE-LONG-INTEGER 2.0)) (log 2)))
  :documentation "The number of bits in a long integer.")

(defun (integer-length INTEGER) ((x LONG-INTEGER))
  :documentation "Return the 1-based position of the left-most bit in `x'.
If `x' is negative, we only count the value bits, not the sign."
  :public? TRUE
  (when (< x 0)
    (setq x (- -1 x)))
  (when (= x 0)
    (return 0))
  (let ((bot 0)
        (top (1- LONG-INTEGER-BIT-WIDTH))
        (split 0)
        (rem LONG-INTEGER 0))
    ;; run a binary search:
    (loop
      (setq split (shift-right (+ bot top) 1))
      (setq rem (shift-right x split))
      (when (= rem 1)
        (return (1+ split)))
      (if (= rem 0)
          (setq top (1- split))
        (setq bot (1+ split))))))

