(defmethod (min NUMBER-WRAPPER) ((x NUMBER-WRAPPER) (y NUMBER-WRAPPER))
  :documentation
  "Return the minimum of `x' and `y'.  If `y' is NULL, return `x'."
  :public? TRUE
  (typecase x
    ((INTEGER-WRAPPER LONG-INTEGER-WRAPPER FLOAT-WRAPPER)
     ;; we could have separate methods for the various wrapper types:
     (typecase y
       ((INTEGER-WRAPPER LONG-INTEGER-WRAPPER FLOAT-WRAPPER)
        (if (or (null? y)
                (<= (wrapper-value x) (wrapper-value y)))
            (return x)
          (return y)))
       (otherwise ;; y is NULL
        (return x))))))

