	(java-indent)
	(java-output-statement (second tree))
	(print-stream *current-stream* ";" EOL)
	(java-unbump-indent)))
  (unless (null? (third tree))
    (java-indent)
    (print-stream *current-stream* "else ")
    (if (or (java-progn? (third tree)) (java-block? (third tree)))
	(java-output-statement (third tree))
        (progn
	  (print-stream *current-stream* EOL)
	  (java-bump-indent)
	  (java-indent)
	  (java-output-statement (third tree))
	  (print-stream *current-stream* ";" EOL)
	  (java-unbump-indent)))) )

