(CL:IN-PACKAGE "STELLA")

(IN-MODULE "/POWERLOOM-SERVER")

(DEFUN STARTUP-POWERLOOM-SERVER-SYSTEM () :PUBLIC? TRUE)

(STARTUP-TIME-PROGN :EARLY-INITS
 (UNLESS (SYSTEM-STARTED-UP? "powerloom" "/POWERLOOM-CODE")
  (/POWERLOOM-CODE/STARTUP-POWERLOOM-SYSTEM))
 (UNLESS (SYSTEM-STARTED-UP? "webtools" "/HTTP/WEBTOOLS")
  (/HTTP/WEBTOOLS/STARTUP-WEBTOOLS-SYSTEM))
 (UNLESS (SYSTEM-STARTED-UP? "ontosaurus" "/ONTOSAURUS")
  (/ONTOSAURUS/STARTUP-ONTOSAURUS-SYSTEM)))

(STARTUP-TIME-PROGN :MODULES
 (DEFINE-MODULE-FROM-STRINGIFIED-SOURCE "/POWERLOOM-SERVER"
  "(:USES (\"STELLA\" \"LOGIC\" \"XML-OBJECTS\" \"SOAP\") :LISP-PACKAGE \"STELLA\" :CPP-PACKAGE \"powerloom_server\" :JAVA-PACKAGE \"edu.isi.powerloom.server\" :CODE-ONLY? TRUE)"))

(STARTUP-TIME-PROGN :MODULES
 (DEFINE-MODULE-FROM-STRINGIFIED-SOURCE "/POWERLOOM-SERVER/GUI-SERVER"
  "(:LISP-PACKAGE \"STELLA\" :CPP-PACKAGE \"powerloom_server_gui\" :JAVA-PACKAGE \"edu.isi.powerloom.server.gui\" :CODE-ONLY? TRUE)"))

(STARTUP-TIME-PROGN :MODULES
 (DEFINE-MODULE-FROM-STRINGIFIED-SOURCE "/POWERLOOM-SERVER/PLSOAP"
  "(:LISP-PACKAGE \"PLSOAP\" :CPP-PACKAGE \"powerloom_server_plsoap\" :JAVA-PACKAGE \"edu.isi.powerloom.server.plsoap\" :CODE-ONLY? TRUE)"))

(STARTUP-TIME-PROGN
 (FOREACH PHASE IN
  (INTERVAL (PHASE-TO-INTEGER :EARLY-INITS) (PHASE-TO-INTEGER :FINAL)) DO
  (SETQ *STARTUP-TIME-PHASE* PHASE)
  (/POWERLOOM-SERVER/GUI-SERVER/STARTUP-XML-OBJECTS)
  (/POWERLOOM-SERVER/GUI-SERVER/STARTUP-GUI-SERVER-API)
  (/POWERLOOM-SERVER/GUI-SERVER/STARTUP-GUI-SERVER)
  (/POWERLOOM-SERVER/GUI-SERVER/STARTUP-EXPLANATIONS)
  (/POWERLOOM-SERVER/PLSOAP/STARTUP-SOAP-SERVER))
 (SETQ *STARTUP-TIME-PHASE* 999))

