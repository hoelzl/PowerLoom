;;; General utility tools for PowerLoom.

(in-package "STELLA")

(in-module "LOGIC")



(defmethod help-print-outline ((top DESCRIPTION) (stream OUTPUT-STREAM)
                               (current-depth INTEGER) (depth INTEGER) (named? BOOLEAN))
  :public? FALSE
  :documentation "Helper function for `print-concept-outline'"
  (unless named?
    (indent-outline current-depth stream)
    (print-stream stream top EOL))
  (unless (outline-depth-exceeded? current-depth depth)
    (++ current-depth)
    (foreach c in (all-direct-subcollections top TRUE)
      do (help-print-outline c stream current-depth depth named?))))


(defmethod help-print-outline ((top NAMED-DESCRIPTION) (stream OUTPUT-STREAM)
                               (current-depth INTEGER) (depth INTEGER) (named? BOOLEAN))
  :public? FALSE
  :documentation "Helper function for `print-concept-outline'"
  (indent-outline current-depth stream)
  (print-stream stream (object-name top) EOL)
  (unless (outline-depth-exceeded? current-depth depth)
    (++ current-depth)
    (foreach c in (all-direct-subcollections top TRUE)
      do (help-print-outline c stream current-depth depth named?))))