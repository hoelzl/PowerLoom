  (foreach entry in *demo-files* 
      as i in (interval 1 NULL)
      do (print "       " i ".  ")
	 (when (< i 10) (print " "))
	 (print (demo-entry-description entry) EOL))
  (print "       " "Q.   Quit demoing" EOL)
  (print "Your choice: ")
  (let ((selection (read-s-expression STANDARD-INPUT))
        (file STRING NULL))
