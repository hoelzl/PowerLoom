      (INTEGER-WRAPPER
       (setq file (select-example-demo selection))
       (when (defined? file)
         (return file)))
      (otherwise
       (when (string-equal? (stringify selection) "Q")
         (return NULL))))
    (print ">> ERROR: Illegal choice `" selection
           "'; enter a number between 1 and " (length *demo-files*) "!"
           EOL EOL)
